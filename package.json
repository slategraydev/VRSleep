{
  "name": "sleepchat",
  "version": "0.1.0",
  "private": true,
  "productName": "SleepChat",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win"
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^30.1.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.sleepchat.app",
    "productName": "SleepChat",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "YOUR_GITHUB_USER",
        "repo": "YOUR_REPO",
        "releaseType": "release"
      }
    ]
  }
}
